{
  "name": "mathleap",
  "description": "MathLeap automates assessments for math classes",
  "version": "1.0.0",

  "dependencies": {
    "babel": "6.3.26",
    "babel-cli": "6.3.17",
    "babel-core": "6.3.26",
    "babel-eslint": "4.1.7",
    "babel-polyfill": "6.3.14",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "body-parser": "1.15.0",
    "bowser": "1.0.0",
    "browserify": "11.1.0",
    "clipboard": "1.5.9",
    "cssmin": "0.4.3",
    "express": "4.13.4",
    "firebase": "2.4.0",
    "jison": "0.4.13",
    "json-stringify-safe": "5.0.1",
    "js-polyfills": "0.1.12",
    "katex": "0.5.1",
    "lodash": "3.10.1",
    "mathjs": "2.4.1",
    "moment": "2.10.6",
    "mz": "2.3.1",
    "node-ses": "1.1.0",
    "proxyworker": "1.3.5",
    "react": "0.14.7",
    "react-addons-linked-state-mixin": "0.14.7",
    "react-dom": "0.14.7",
    "react-google-charts": "0.2.0",
    "reactfire": "0.6.0",
    "throng": "2.0.1",
    "uglify-js": "2.4.24"
  },

  "devDependencies": {
    "chai": "3.2.0",
    "eslint": "2.2.0",
    "eslint-plugin-react": "4.0.0",
    "flow-bin": "0.20.1",
    "jsdom": "7.2.2",
    "mocha": "2.3.2",
    "xmlhttprequest": "1.8.0"
  },

  "scripts": {
    "deploy": "rm -rf node_modules && npm install babel-polyfill@6.3.14 && npm install js-polyfills@0.1.12 && firebase deploy --token=\"-J2V1T9-kU9EDXsq_N0S|b8d0ef7451decb6844663262c9dfe80b\" --non-interactive",
    "flow": "flow",
    "lint": "eslint client gen server",
    "postinstall": "make -j4",
    "test": "make -j4 && mocha",
    "watch": "watchman-make -p '**/*' -t all"
  },

  "eslintConfig": {
    "parser": "babel-eslint",

    "plugins": ["react"],

    "ecmaFeatures": {
      "jsx": true
    },

    "env": {
      "browser": true,
      "es6": true,
      "mocha": true,
      "node": true,
      "worker": true
    },

    "extends": "eslint:recommended",

    "rules": {
      "array-bracket-spacing": 2,
      "block-spacing": 2,
      "camelcase": 2,
      "complexity": [1, 10],
      "curly": 2,
      "dot-location": [2, "property"],
      "dot-notation": 2,
      "eol-last": 2,
      "eqeqeq": [2, "smart"],
      "jsx-quotes": 2,
      "keyword-spacing": 2,
      "max-depth": [1, 3],
      "max-len": [1, 100],
      "max-params": [1, 5],
      "max-statements": [1, 14],
      "no-case-declarations": 1,
      "no-catch-shadow": 2,
      "no-console": 0,
      "no-else-return": 2,
      "no-extra-bind": 2,
      "no-extra-parens": 2,
      "no-eval": 1,
      "no-fallthrough": 1,
      "no-floating-decimal": 2,
      "no-implied-eval": 2,
      "no-lone-blocks": 2,
      "no-lonely-if": 2,
      "no-loop-func": 2,
      "no-new": 2,
      "no-new-func": 2,
      "no-new-wrappers": 2,
      "no-obj-calls": 2,
      "no-new-require": 2,
      "no-proto": 1,
      "no-redeclare": 2,
      "no-return-assign": 2,
      "no-sequences": 2,
      "no-shadow": 2,
      "no-shadow-restricted-names": 2,
      "no-throw-literal": 2,
      "no-trailing-spaces": 2,
      "no-undef": 2,
      "no-undef-init": 2,
      "no-unneeded-ternary": 2,
      "no-unreachable": 2,
      "no-unused-vars": 2,
      "no-unused-expressions": 2,
      "no-useless-call": 2,
      "no-useless-concat": 2,
      "no-void": 2,
      "no-with": 2,
      "operator-assignment": [2, "always"],
      "operator-linebreak": [2, "after"],
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "semi": 2,
      "space-before-blocks": 2,
      "space-before-function-paren": [2, "never"],
      "space-infix-ops": 2,
      "space-unary-ops": 2,
      "yoda": 2
    }
  }
}
