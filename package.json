{
  "name": "ml",
  "description": "MathLeap automates assessments for math classes",
  "version": "0.0.0",
  "author": "Gareth Aye [:gaye] <gareth.aye@gmail.com>",

  "dependencies": {
    "babel-polyfill": "6.3.14",
    "firebase": "2.3.1",
    "lodash": "3.10.1",
    "mathjs": "2.4.1",
    "moment": "2.10.6",
    "proxyworker": "1.3.5",
    "react": "0.14.2",
    "react-dom": "0.14.2",
    "reactfire": "0.5.1",
    "xmldom": "0.1.19"
  },

  "devDependencies": {
    "babel": "6.3.26",
    "babel-cli": "6.3.17",
    "babel-core": "6.3.26",
    "babel-eslint": "4.1.6",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "browserify": "11.1.0",
    "chai": "3.2.0",
    "cssmin": "0.4.3",
    "eslint": "1.5.1",
    "eslint-plugin-react": "3.8.0",
    "flow-bin": "0.20.1",
    "jison": "0.4.13",
    "mocha": "2.3.2",
    "uglify-js": "2.4.24",
    "xmlhttprequest": "1.8.0"
  },

  "scripts": {
    "deploy": "make clean && npm install && rm -rf node_modules && npm install --production && firebase deploy && npm install",
    "flow": "flow",
    "lint": "eslint src",
    "prepublish": "make -j8",
    "test": "make -j8 && mocha",
    "watch": "watchman-make -p '**/*' -t all"
  },

  "eslintConfig": {
    "parser": "babel-eslint",

    "plugins": ["react"],

    "ecmaFeatures": {
      "jsx": true
    },

    "env": {
      "browser": true,
      "mocha": true,
      "node": true,
      "worker": true
    },

    "extends": "eslint:recommended",

    "rules": {
      "array-bracket-spacing": 2,
      "block-spacing": 2,
      "camelcase": 2,
      "complexity": [1, 6],
      "curly": 2,
      "dot-location": [2, "property"],
      "dot-notation": 2,
      "eol-last": 2,
      "eqeqeq": 1,
      "jsx-quotes": 2,
      "max-depth": [1, 3],
      "max-len": [1, 80],
      "max-params": [1, 5],
      "max-statements": [1, 8],
      "no-catch-shadow": 2,
      "no-console": 0,
      "no-else-return": 2,
      "no-extra-bind": 2,
      "no-extra-parens": 2,
      "no-eval": 2,
      "no-fallthrough": 1,
      "no-floating-decimal": 2,
      "no-implied-eval": 2,
      "no-lone-blocks": 2,
      "no-lonely-if": 2,
      "no-loop-func": 2,
      "no-new": 2,
      "no-new-func": 2,
      "no-new-wrappers": 2,
      "no-obj-calls": 2,
      "no-new-require": 2,
      "no-param-reassign": 1,
      "no-proto": 1,
      "no-redeclare": 2,
      "no-return-assign": 2,
      "no-sequences": 2,
      "no-shadow": 2,
      "no-shadow-restricted-names": 2,
      "no-throw-literal": 2,
      "no-trailing-spaces": 2,
      "no-undef": 2,
      "no-undef-init": 2,
      "no-unneeded-ternary": 2,
      "no-unreachable": 2,
      "no-unused-vars": 2,
      "no-unused-expressions": 2,
      "no-useless-call": 2,
      "no-useless-concat": 2,
      "no-void": 2,
      "no-with": 2,
      "operator-assignment": [2, "always"],
      "operator-linebreak": [2, "after"],
      "react/jsx-uses-react": 1,
      "semi": 2,
      "space-after-keywords": 2,
      "space-before-keywords": 2,
      "space-before-blocks": 2,
      "space-before-function-paren": [2, "never"],
      "space-infix-ops": 2,
      "space-unary-ops": 2,
      "yoda": 2
    }
  }
}
