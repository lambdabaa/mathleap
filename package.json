{
  "name": "ml",
  "description": "MathLeap automates assessments for math classes",
  "version": "0.0.0",
  "author": "Gareth Aye [:gaye] <gareth.aye@gmail.com>",

  "dependencies": {
    "babel-core": "5.8.24",
    "firebase": "2.3.1",
    "lodash": "3.10.1",
    "mathjs": "2.4.1",
    "proxyworker": "1.3.5",
    "react": "0.14.2",
    "react-dom": "0.14.2",
    "reactfire": "0.5.1"
  },

  "devDependencies": {
    "babel": "5.8.23",
    "babel-eslint": "4.1.4",
    "browserify": "11.1.0",
    "chai": "3.2.0",
    "eslint": "1.5.1",
    "eslint-plugin-react": "3.8.0",
    "jison": "0.4.13",
    "mocha": "2.3.2",
    "uglify-js": "2.4.24",
    "watchman": "0.1.8"
  },

  "scripts": {
    "lint": "eslint .",
    "prepublish": "make -j8",
    "test": "make -j8 && mocha",
    "watch": "watchman src 'make -j8'"
  },

  "eslintConfig": {
    "parser": "babel-eslint",

    "plugins": [
      "react"
    ],

    "ecmaFeatures": {
      "jsx": true
    },

    "env": {
      "browser": true,
      "mocha": true,
      "node": true,
      "worker": true
    },

    "rules": {
      "comma-dangle": 2,
      "dot-notation": 2,
      "eqeqeq": 2,
      "no-cond-assign": 2,
      "no-constant-condition": 2,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-else-return": 2,
      "no-empty": 2,
      "no-ex-assign": 2,
      "no-extra-boolean-cast": 2,
      "no-extra-parens": 2,
      "no-extra-semi": 2,
      "no-func-assign": 2,
      "no-inner-declarations": 2,
      "no-invalid-regexp": 2,
      "no-irregular-whitespace": 2,
      "no-lone-blocks": 2,
      "no-loop-func": 2,
      "no-param-reassign": 1,
      "no-negated-in-lhs": 2,
      "no-new": 2,
      "no-new-wrappers": 2,
      "no-obj-calls": 2,
      "no-redeclare": 2,
      "no-return-assign": 2,
      "no-undef": 2,
      "no-undef-init": 2,
      "no-unreachable": 2,
      "no-unused-vars": 1,
      "use-isnan": 2,
      "valid-typeof": 2
    }
  }
}
